@model DopeZoo.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<header class="intro-header" style="background-image: url(@Url.Content("~/Content/img/register.jpg"))">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Register</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<meta charset="utf-8">
<title>Login</title>

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,700">
<link rel="stylesheet" href="http://weloveiconfonts.com/api/?family=fontawesome">
<style type="text/css">
    [class*="fontawesome-"]:before {
        font-family: 'FontAwesome', sans-serif;
    }

    body {
        font-family: 'Lora', 'Times New Roman', serif;
        font-size: 20px;
        color: #333333;
    }

    input {
        border: none;
        font-family: 'Open Sans', Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5em;
        padding: 0;
        -webkit-appearance: none;
    }

    p {
        line-height: 1.5em;
    }

    after {
        clear: both;
    }

    #login {
        margin: 60px auto;
        width: 370px;
    }

        #login form {
            margin: auto;
            padding: 22px 22px 22px 22px;
            width: 100%;
            border-radius: 5px;
            background: #282e33;
            border-top: 3px solid #434a52;
            border-bottom: 3px solid #434a52;
        }

            #login form span {
                background-color: #363b41;
                border-radius: 3px 0px 0px 3px;
                border-right: 3px solid #434a52;
                color: #606468;
                display: block;
                float: left;
                line-height: 50px;
                text-align: center;
                width: 50px;
                height: 50px;
            }

            #login form input[type="text"] {
                background-color: #3b4148;
                border-radius: 0px 3px 3px 0px;
                color: #a9a9a9;
                margin-bottom: 1em;
                padding: 0 16px;
                width: 270px;
                height: 50px;
            }

            #login form input[type="password"] {
                background-color: #3b4148;
                border-radius: 0px 3px 3px 0px;
                color: #a9a9a9;
                margin-bottom: 1em;
                padding: 0 16px;
                width: 270px;
                height: 50px;
            }

            #login form input[type="submit"] {
                background: #ffffff;
                border: 0;
                width: 100%;
                height: 40px;
                border-radius: 3px;
                color: black;
                cursor: pointer;
                transition: background 0.3s ease-in-out;
            }

